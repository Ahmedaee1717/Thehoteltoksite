/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --color-bg-primary: #0a0a0a;
    --color-bg-secondary: #121212;
    --color-bg-tertiary: #1a1a1a;
    --color-text-primary: #f5f5f5;
    --color-text-secondary: #a0a0a0;
    --color-accent: #d4af37;
    --color-accent-hover: #e6c158;
    --color-border: #2a2a2a;
    
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-serif: 'Playfair Display', Georgia, serif;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-sans);
    background-color: var(--color-bg-primary);
    color: var(--color-text-primary);
    line-height: 1.7;
    font-size: 16px;
    font-weight: 300;
    overflow-x: hidden;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

/* Header */
#header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--color-border);
    z-index: 1000;
    padding: 1.5rem 0;
}

#header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    color: var(--color-text-primary);
}

nav {
    display: flex;
    gap: 2.5rem;
}

nav a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 400;
    letter-spacing: 0.3px;
    transition: color 0.3s ease;
}

nav a:hover {
    color: var(--color-text-primary);
}

/* Hero Section */
#hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 8rem 0 6rem;
    background: linear-gradient(135deg, #0a0a0a 0%, #121212 50%, #0a0a0a 100%);
}

.hero-headline {
    font-family: var(--font-serif);
    font-size: 4rem;
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 2rem;
    color: var(--color-text-primary);
    letter-spacing: -1px;
}

.hero-subheadline {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
    max-width: 900px;
    margin-bottom: 3rem;
    font-weight: 300;
}

.hero-cta {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 5rem;
}

.btn {
    padding: 1rem 2.5rem;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 2px;
    transition: all 0.3s ease;
    display: inline-block;
    letter-spacing: 0.5px;
    cursor: pointer;
    border: none;
    font-family: var(--font-sans);
}

.btn-primary {
    background-color: var(--color-accent);
    color: var(--color-bg-primary);
}

.btn-primary:hover {
    background-color: var(--color-accent-hover);
    transform: translateY(-2px);
}

.btn-secondary {
    background-color: transparent;
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
}

.btn-secondary:hover {
    border-color: var(--color-text-primary);
    transform: translateY(-2px);
}

.credibility-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding-top: 3rem;
    border-top: 1px solid var(--color-border);
}

.credibility-item {
    text-align: center;
}

.credibility-item span {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.5px;
    font-weight: 400;
}

/* Section Styles */
section {
    padding: 8rem 0;
    border-bottom: 1px solid var(--color-border);
}

section:nth-child(even) {
    background-color: var(--color-bg-secondary);
}

section:nth-child(odd) {
    background-color: var(--color-bg-primary);
}

.section-content {
    max-width: 1000px;
    margin: 0 auto;
}

h2 {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 600;
    margin-bottom: 3rem;
    color: var(--color-text-primary);
    letter-spacing: -0.5px;
}

h3 {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
}

/* About Section */
.about-text p {
    font-size: 1.15rem;
    line-height: 1.9;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
}

/* Benefits Grid */
.benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
    margin-bottom: 4rem;
}

.benefit-card {
    padding: 2.5rem;
    background-color: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 2px;
    transition: transform 0.3s ease, border-color 0.3s ease;
}

.benefit-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent);
}

.benefit-card h3 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
}

.benefit-card p {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
}

/* Subsection */
.subsection {
    padding: 3rem 0;
    margin: 3rem 0;
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
}

.subsection-text {
    font-size: 1.15rem;
    line-height: 1.9;
    color: var(--color-text-secondary);
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    font-style: italic;
}

/* Forms */
.form-container {
    max-width: 600px;
    margin: 4rem auto 0;
    padding: 3rem;
    background-color: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 2px;
}

.form-container h3 {
    margin-bottom: 2rem;
    text-align: center;
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.contact-form input,
.contact-form textarea {
    padding: 1rem;
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 2px;
    color: var(--color-text-primary);
    font-family: var(--font-sans);
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.contact-form input:focus,
.contact-form textarea:focus {
    outline: none;
    border-color: var(--color-accent);
}

.contact-form textarea {
    resize: vertical;
}

.contact-form button {
    width: 100%;
}

.form-success {
    display: none;
    text-align: center;
    padding: 1rem;
    background-color: rgba(212, 175, 55, 0.1);
    border: 1px solid var(--color-accent);
    border-radius: 2px;
    color: var(--color-accent);
    margin-top: 1rem;
}

.form-success.show {
    display: block;
}

/* Contact CTA Section */
.contact-cta {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
}

.contact-cta h2 {
    margin-bottom: 1.5rem;
}

.contact-cta p {
    font-size: 1.15rem;
    color: var(--color-text-secondary);
    margin-bottom: 2.5rem;
}

/* Footer */
footer {
    padding: 3rem 0;
    background-color: var(--color-bg-primary);
    text-align: center;
    border-top: 1px solid var(--color-border);
}

footer p {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
}

.disclaimer {
    font-size: 0.85rem;
    font-style: italic;
    color: var(--color-text-secondary);
    opacity: 0.7;
}

/* Responsive Design */
@media (max-width: 768px) {
    nav {
        gap: 1.5rem;
    }
    
    nav a {
        font-size: 0.85rem;
    }
    
    .hero-headline {
        font-size: 2.5rem;
    }
    
    .hero-subheadline {
        font-size: 1.1rem;
    }
    
    h2 {
        font-size: 2rem;
    }
    
    .credibility-row {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .benefits-grid {
        grid-template-columns: 1fr;
    }
    
    section {
        padding: 5rem 0;
    }
    
    .form-container {
        padding: 2rem;
    }
    
    .hero-cta {
        flex-direction: column;
        gap: 1rem;
    }
    
    .btn {
        text-align: center;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 1.5rem;
    }
    
    .logo {
        font-size: 1.2rem;
    }
    
    nav {
        display: none;
    }
    
    .hero-headline {
        font-size: 2rem;
    }
    
    h2 {
        font-size: 1.8rem;
    }
}

/* ========================================
   BLOG PAGE STYLES - MODERN CARD GRID
   ======================================== */

/* Blog Page Light Theme Override */
body:has(#blog-listing) #header,
body:has(#blog-post) #header {
    background-color: rgba(255, 255, 255, 0.98);
    border-bottom: 1px solid #e9ecef;
    backdrop-filter: blur(10px);
}

body:has(#blog-listing) .logo,
body:has(#blog-post) .logo {
    color: #1a1a1a;
}

body:has(#blog-listing) nav a,
body:has(#blog-post) nav a {
    color: #6c757d;
}

body:has(#blog-listing) nav a:hover,
body:has(#blog-post) nav a:hover {
    color: #1a1a1a;
}

body:has(#blog-listing) footer,
body:has(#blog-post) footer {
    background-color: #ffffff;
    border-top: 1px solid #e9ecef;
}

body:has(#blog-listing) footer p,
body:has(#blog-post) footer p {
    color: #6c757d;
}

body:has(#blog-listing) footer .disclaimer,
body:has(#blog-post) footer .disclaimer {
    color: #adb5bd;
}

/* Blog Listing Section */
#blog-listing {
    padding: 8rem 0 4rem;
    min-height: 100vh;
    background-color: #f8f9fa;
}

.blog-header {
    text-align: center;
    margin-bottom: 4rem;
}

.blog-header h1 {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #1a1a1a;
    letter-spacing: -0.5px;
}

.blog-intro {
    font-size: 1.05rem;
    color: #6c757d;
    max-width: 650px;
    margin: 0 auto;
    line-height: 1.6;
}

/* Blog Grid - 3 Columns */
.blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
}

/* Blog Card */
.blog-card {
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    height: 100%;
}

.blog-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
}

/* Category Badge */
.blog-card-category {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background-color: var(--color-accent);
    color: #1a1a1a;
    padding: 0.3rem 0.75rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 1;
}

/* Card Image */
.blog-card-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: #e9ecef;
    position: relative;
}

.blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.blog-card:hover .blog-card-image img {
    transform: scale(1.05);
}

.blog-card-image-placeholder {
    background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.blog-card-image-text {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 300;
    color: #adb5bd;
}

/* Card Content */
.blog-card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.blog-card-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.75rem;
    color: #1a1a1a;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.blog-card-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-size: 0.85rem;
    color: #6c757d;
}

.blog-card-author::after {
    content: '•';
    margin-left: 0.5rem;
}

.blog-card-excerpt {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #495057;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1;
}

.blog-card-link {
    color: var(--color-accent);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: auto;
}

.blog-card-link::after {
    content: '→';
    transition: transform 0.3s ease;
}

.blog-card:hover .blog-card-link::after {
    transform: translateX(4px);
}

/* Empty State */
.blog-empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: 4rem 2rem;
    color: #6c757d;
    font-size: 1.05rem;
    background-color: #ffffff;
    border-radius: 8px;
}

/* Pagination */
.blog-pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 3rem;
    gap: 1rem;
}

.btn-load-more {
    padding: 0.75rem 2rem;
    background-color: #ffffff;
    color: #1a1a1a;
    border: 2px solid #dee2e6;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-load-more:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: #1a1a1a;
    transform: translateY(-2px);
}

/* Responsive - Tablet */
@media (max-width: 1024px) {
    .blog-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
}

/* Responsive - Mobile */
@media (max-width: 768px) {
    .blog-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .blog-card-title {
        font-size: 1.15rem;
    }
    
    .blog-header h1 {
        font-size: 2rem;
    }
    
    .blog-header {
        margin-bottom: 3rem;
    }
    
    #blog-listing {
        padding: 6rem 0 3rem;
    }
}

@media (max-width: 480px) {
    .blog-header h1 {
        font-size: 1.75rem;
    }
    
    .blog-card-title {
        font-size: 1.1rem;
    }
    
    .blog-card-meta {
        font-size: 0.8rem;
    }
    
    .blog-card-content {
        padding: 1.25rem;
    }
    
    .blog-card-image-text {
        font-size: 2.5rem;
    }
}

/* ========================================
   BLOG POST PAGE STYLES - TWO COLUMN LAYOUT
   ======================================== */

#blog-post {
    padding: 8rem 0 4rem;
    min-height: 100vh;
    background-color: var(--color-bg-primary);
}

.blog-post-container {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 4rem;
    max-width: 1400px;
}

/* Main Content Column */
.blog-post-main {
    max-width: 800px;
}

/* Breadcrumb */
.breadcrumb {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
}

.breadcrumb a {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s;
}

.breadcrumb a:hover {
    color: var(--color-text-primary);
}

.breadcrumb .separator {
    margin: 0 0.5rem;
}

/* Article Header */
.article-header {
    margin-bottom: 3rem;
}

.article-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-accent);
    margin-bottom: 1rem;
}

.article-title {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--color-text-primary);
    letter-spacing: -1px;
}

.article-meta {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
}

.meta-separator {
    margin: 0 0.75rem;
}

/* Social Share */
.social-share {
    display: flex;
    gap: 0.75rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
}

.share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    transition: all 0.3s ease;
    text-decoration: none;
}

.share-btn:hover {
    background-color: var(--color-accent);
    color: var(--color-bg-primary);
    transform: translateY(-2px);
}

/* Featured Image */
.article-featured-image {
    margin-bottom: 3rem;
    border-radius: 4px;
    overflow: hidden;
}

.article-featured-image img {
    width: 100%;
    height: auto;
    display: block;
}

/* Article Body */
.article-body {
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
}

.article-body h2 {
    font-family: var(--font-serif);
    font-size: 2rem;
    font-weight: 600;
    margin: 3rem 0 1.5rem;
    color: var(--color-text-primary);
}

.article-body h3 {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 500;
    margin: 2.5rem 0 1rem;
    color: var(--color-text-primary);
}

.article-body p {
    margin-bottom: 1.5rem;
}

.article-body ul,
.article-body ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
}

.article-body li {
    margin-bottom: 0.75rem;
}

.article-body a {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px solid var(--color-accent);
    transition: all 0.2s ease;
}

.article-body a:hover {
    color: var(--color-accent-hover);
    border-bottom-color: var(--color-accent-hover);
}

.article-body blockquote {
    border-left: 3px solid var(--color-accent);
    padding-left: 2rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-text-primary);
    font-size: 1.15rem;
}

.article-body code {
    background-color: var(--color-bg-secondary);
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
}

.article-body pre {
    background-color: var(--color-bg-secondary);
    padding: 1.5rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 2rem 0;
}

.article-body pre code {
    background: none;
    padding: 0;
}

/* Author Box */
.author-box {
    display: flex;
    gap: 1.5rem;
    padding: 2rem;
    margin: 4rem 0;
    background-color: var(--color-bg-secondary);
    border-radius: 4px;
    border: 1px solid var(--color-border);
}

.author-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-accent) 0%, #b8902d 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.author-avatar span {
    font-family: var(--font-serif);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-bg-primary);
}

.author-info {
    flex: 1;
}

.author-name {
    font-family: var(--font-serif);
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--color-text-primary);
}

.author-title {
    font-size: 0.9rem;
    color: var(--color-accent);
    margin-bottom: 0.75rem;
}

.author-bio {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin: 0;
}

/* Post Navigation */
.post-navigation {
    display: flex;
    gap: 2rem;
    padding-top: 3rem;
    border-top: 1px solid var(--color-border);
}

.nav-link {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.5rem;
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s ease;
}

.nav-link:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
}

.nav-next {
    text-align: right;
}

.nav-label {
    font-size: 0.85rem;
    color: var(--color-accent);
    font-weight: 600;
}

.nav-title {
    font-size: 1rem;
    color: var(--color-text-primary);
}

/* Sidebar */
.blog-post-sidebar {
    position: sticky;
    top: 6rem;
    height: fit-content;
}

.sidebar-widget {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    padding: 2rem;
    margin-bottom: 2rem;
}

.widget-title {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--color-text-primary);
}

/* Recent Posts Widget */
.recent-posts {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.recent-post-item {
    display: flex;
    gap: 1rem;
    text-decoration: none;
    transition: opacity 0.2s;
}

.recent-post-item:hover {
    opacity: 0.8;
}

.recent-post-item img,
.recent-post-placeholder {
    width: 80px;
    height: 60px;
    object-fit: cover;
    border-radius: 4px;
    flex-shrink: 0;
}

.recent-post-placeholder {
    background: linear-gradient(135deg, var(--color-bg-tertiary) 0%, var(--color-bg-secondary) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-serif);
    font-size: 1.5rem;
    color: var(--color-text-secondary);
}

.recent-post-content {
    flex: 1;
    min-width: 0;
}

.recent-post-content h4 {
    font-size: 0.9rem;
    font-weight: 500;
    line-height: 1.4;
    margin-bottom: 0.5rem;
    color: var(--color-text-primary);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.recent-post-date {
    font-size: 0.8rem;
    color: var(--color-text-secondary);
}

.widget-loading,
.widget-empty,
.widget-error {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    padding: 1rem 0;
}

/* Categories Widget */
.category-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.category-list li {
    margin-bottom: 0.75rem;
}

.category-list a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
    display: block;
}

.category-list a:hover {
    color: var(--color-accent);
}

/* Newsletter Widget */
.newsletter-widget {
    background: linear-gradient(135deg, var(--color-bg-secondary) 0%, var(--color-bg-tertiary) 100%);
}

.newsletter-desc {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
}

.newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.newsletter-form input {
    padding: 0.75rem;
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    color: var(--color-text-primary);
    font-size: 0.9rem;
}

.newsletter-form input:focus {
    outline: none;
    border-color: var(--color-accent);
}

.newsletter-form button {
    width: 100%;
}

/* Responsive - Tablet */
@media (max-width: 1024px) {
    .blog-post-container {
        grid-template-columns: 1fr;
        gap: 3rem;
    }
    
    .blog-post-sidebar {
        position: relative;
        top: auto;
    }
    
    .sidebar-widget {
        margin-bottom: 1.5rem;
    }
}

/* Responsive - Mobile */
@media (max-width: 768px) {
    #blog-post {
        padding: 6rem 0 3rem;
    }
    
    .article-title {
        font-size: 2rem;
    }
    
    .article-body {
        font-size: 1rem;
    }
    
    .article-body h2 {
        font-size: 1.5rem;
    }
    
    .article-body h3 {
        font-size: 1.25rem;
    }
    
    .social-share {
        justify-content: center;
    }
    
    .author-box {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    
    .post-navigation {
        flex-direction: column;
        gap: 1rem;
    }
    
    .nav-next {
        text-align: left;
    }
}

@media (max-width: 480px) {
    .article-title {
        font-size: 1.75rem;
    }
    
    .sidebar-widget {
        padding: 1.5rem;
    }
}
